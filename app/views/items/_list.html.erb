
<div class="row">
  <% items.each do |item| %>
    <div class="col mx-2">
      <div class="card shadow-lg bg-light text-light mx-auto my-5 p-2" style="width: 18rem; height: 650px;">
        <div class="card-body d-flex flex-column">
          <%= render "item", item: item %>
          <div class="mt-auto">
            <%= link_to "Voir ce catz collector !", item_path(:id => item.id), class: "btn btn-outline-dark w-100  mb-3" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
