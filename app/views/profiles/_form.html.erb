<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name, label:"Prénom" %>
    <%= f.input :last_name, label:"Nom" %>
    <%= f.input :phone_number, label: "Téléphone" %>
    <%= f.input :address, label: "Adresse" %>
    <%= f.input :address_complement, label: "Complément d'adresse" %>
    <%= f.input :city, label:"ville" %>
    <%= f.input :zip_code, label: "Code postal" %>
  </div>

  <div class="form-actions d-flex justify-content-center mt-2">
    <%= f.button :submit, class:"btn btn-primary btn-sm", value:"Mettre à jour" %>
  </div>
<% end %>