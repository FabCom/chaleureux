<%card = {
  header: "#{@profile.first_name} #{@profile.last_name}", 
  text: "
    <b>Téléphone</b> <br>
    #{@profile.phone_number} <br>
    <b>Adresse</b>
    #{@profile.adress}<br>
    #{@profile.adress_complement}<br>
    <b>Ville</b><br>
    #{@profile.city}<br>
    <b>Code postal</b>
    #{@profile.zip_code}
  ",
  actions: [{label: "Éditer mon profil", path: edit_profile_path(@profile), type:"primary"}],
  footer: "Utilisateur actif depuis #{@profile.user.created_at}"
}%>

<%= render "partials/card", card: card%>
