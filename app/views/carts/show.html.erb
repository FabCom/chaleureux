  <h1> Panier </h1>
  <br/>
<div class="container">
    <h1>Mon panier</h1>
    <br/>
    <br/>
        <div class="row">
            <div class="col-lg-8 col-md-8">
                <table class="table">
                    <head>
                        <ul>
                        <li scope="col">Quantité</li> <!--facultatif-->
                        <li scope="col">Nom de produit</li>
                        <li scope="col">Prix unitaire</li>
                        <li scope="col">Prix selon quantité</li> <!--facultatif-->
                        <li scope="col"></li>

                        </ul>
                    </head>
                    <tbody>
                        <% total_price = [] %> <!--Crée un array vide-->
                        <%  @items_in_cart.each do |item| %> <!--Pour chaque produit du panier on affiche le nom et le prix -->
                            <!-- item.quantity facultatif -->
                            <li><%= item.title %></li>
                            <li><%= item.price %>€</li>
                            <li><% total_price << item.price%>

                            </tr>
                        <% end %>
                         <ul>
                            <li class="font-weight-bold">Prix total:</li>
                            <li><%= total_price.inject(0){|sum,x| sum + x }%>€</li> <!--Fait la somme des prix dans notre tableau-->
                        </ul>
                    </tbody>
                </table>
            </div>
        </div>
</div>