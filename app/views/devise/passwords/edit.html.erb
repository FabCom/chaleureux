<div class="d-flex flex-column justify-content-center align-items-center mt-5">
  <h2>Changement du mot de passe</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password,
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} caractÃ¨res minimums" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label: "Nouveau mot de passe" %>
      <%= f.input :password_confirmation,
                  label: "Confirmer votre mot de passe",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions d-flex justify-content-center mt-2">
      <%= f.button :submit, "Changer mon mot de passe", class: "btn btn-primary btn-sm" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
